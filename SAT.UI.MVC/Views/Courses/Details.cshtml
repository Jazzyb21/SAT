@model SAT.DATA.EF.Course

@{
    ViewBag.Title = "Details " + Model.CourseName;
}

<div class="container" id="stuDetails">
    <div id="stuHeader"><h2>@ViewBag.Title</h2></div>
 
    <div id="stuContentRight">
        <ul id="detailsList">
            <li>
                @Html.DisplayNameFor(model => model.CourseName): @Html.DisplayFor(model => model.CourseName)
            </li>
            <li>
                @Html.DisplayNameFor(model => model.CourseDescription): @Html.DisplayFor(model => model.CourseDescription)
            </li>
            <li>
                @Html.DisplayNameFor(model => model.CreditHours): @Html.DisplayFor(model => model.CreditHours)
            </li>
            <li>
                @Html.DisplayNameFor(model => model.Curriculum): @Html.DisplayFor(model => model.Curriculum)
            </li>
            <li>
                @Html.DisplayNameFor(model => model.Notes): @Html.DisplayFor(model => model.Notes)
            </li>
            <li>
                @Html.DisplayNameFor(model => model.IsActive): @Html.DisplayFor(model => model.IsActive)
            </li>
        </ul>
    </div>
    <div class="clearfix"></div>
    <br />
    <div id="stuFooterLeft">
        @Html.ActionLink("Back to Courses", "Index", null, new { @class = "btn btn-success" })

    </div>
    <div id="stuFooterRight">
        @if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.CourseId }, new { @class = "btn btn-danger" })
        }

    </div>
    <div class="clearfix"></div>
</div>